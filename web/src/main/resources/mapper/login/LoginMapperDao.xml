<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.attendance_system.login.dao.LoginDao" >

    <select id="getLogin" resultType="boolean" >
         <![CDATA[ select count(1) from login where username = #{login.username} and password = #{login.password}]]>
    </select>

    <select id="selectTel" resultType="boolean" >
        <![CDATA[select count(*) from login where tel = #{tel}]]>
    </select>

    <insert id="register" >
        insert into login (username,password,email,tel) values (#{register.username},#{register.password},#{register.email},#{register.tel});
    </insert>
</mapper>